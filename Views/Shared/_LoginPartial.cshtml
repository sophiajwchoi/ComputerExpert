@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">

    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hi @UserManager.GetUserName(User)!</a>
    <a asp-area="Identity" asp-controller="Order" asp-action="Orders" asp-route-userId="@UserManager.GetUserId(User)" class="btn btn-outline-primary">Orders</a>
    <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>

</form> }
else
{
<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary my-2 ml-2 my-sm-0">Register</a>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary my-2 ml-2 my-sm-0">Login</a>}
